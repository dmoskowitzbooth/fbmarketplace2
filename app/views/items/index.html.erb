<div>
  <div>
    <h1>
      List of all items
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new item
    </h2>

    <form action="/insert_item" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" rows="3"></textarea>
      </div>

      <div>
        <label for="category_box">
          Category
        </label>

        <input type="text" id="category_box" name="query_category">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <div>
        <label for="seller_id_box">
          Seller
        </label>

        <input type="text" id="seller_id_box" name="query_seller_id">
      </div>

      <div>
        <label for="asking_price_box">
          Asking price
        </label>

        <input type="text" id="asking_price_box" name="query_asking_price">
      </div>

      <div>
        <label for="og_purchase_price_box">
          Og purchase price
        </label>

        <input type="text" id="og_purchase_price_box" name="query_og_purchase_price">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status">
      </div>

      <div>
        <label for="sale_type_box">
          Sale type
        </label>

        <input type="text" id="sale_type_box" name="query_sale_type">
      </div>

      <div>
        <label for="offers_count_box">
          Offers count
        </label>

        <input type="text" id="offers_count_box" name="query_offers_count">
      </div>

      <div>
        <label for="msg_chains_count_box">
          Msg chains count
        </label>

        <input type="text" id="msg_chains_count_box" name="query_msg_chains_count">
      </div>

      <div>
        <label for="reviews_count_box">
          Reviews count
        </label>

        <input type="text" id="reviews_count_box" name="query_reviews_count">
      </div>

      <button>
        Create item
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Description
        </th>

        <th>
          Category
        </th>

        <th>
          Image
        </th>

        <th>
          Seller
        </th>

        <th>
          Asking price
        </th>

        <th>
          Og purchase price
        </th>

        <th>
          Address
        </th>

        <th>
          Status
        </th>

        <th>
          Sale type
        </th>

        <th>
          Offers count
        </th>

        <th>
          Msg chains count
        </th>

        <th>
          Reviews count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_items.each do |an_item| %>
      <tr>
        <td>
          <%= an_item.id %>
        </td>

        <td>
          <%= an_item.name %>
        </td>

        <td>
          <%= an_item.description %>
        </td>

        <td>
          <%= an_item.category %>
        </td>

        <td>
          <%= an_item.image %>
        </td>

        <td>
          <%= an_item.seller_id %>
        </td>

        <td>
          <%= an_item.asking_price %>
        </td>

        <td>
          <%= an_item.og_purchase_price %>
        </td>

        <td>
          <%= an_item.address %>
        </td>

        <td>
          <%= an_item.status %>
        </td>

        <td>
          <%= an_item.sale_type %>
        </td>

        <td>
          <%= an_item.offers_count %>
        </td>

        <td>
          <%= an_item.msg_chains_count %>
        </td>

        <td>
          <%= an_item.reviews_count %>
        </td>

        <td>
          <%= time_ago_in_words(an_item.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_item.updated_at) %> ago
        </td>

        <td>
          <a href="/items/<%= an_item.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

<h1>Items for Sale Near You</h1>

<%= link_to "âž• List an Item for Sale", new_item_path, class: "btn btn-primary" %>

<% @list_of_items.each do |item| %>
  <div class="item">
    <h3><%= item.name %></h3>
    <p><%= item.description %></p>
    <p><strong>$<%= item.asking_price %></strong></p>
    <p><%= item.address %></p>
    <%= link_to "View Item", item_path(item) %>
  </div>
<% end %>
