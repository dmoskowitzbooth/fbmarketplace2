<div>
  <div>
    <h1>
      List of all sales
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new sale
    </h2>

    <form action="/insert_sale" method="post">
      <div>
        <label for="item_id_box">
          Item
        </label>

        <input type="text" id="item_id_box" name="query_item_id">
      </div>

      <div>
        <label for="buyer_id_box">
          Buyer
        </label>

        <input type="text" id="buyer_id_box" name="query_buyer_id">
      </div>

      <div>
        <label for="seller_id_box">
          Seller
        </label>

        <input type="text" id="seller_id_box" name="query_seller_id">
      </div>

      <div>
        <label for="accepted_offer_id_box">
          Accepted offer
        </label>

        <input type="text" id="accepted_offer_id_box" name="query_accepted_offer_id">
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status">
      </div>

      <div>
        <label for="final_price_box">
          Final price
        </label>

        <input type="text" id="final_price_box" name="query_final_price">
      </div>

      <div>
        <label for="pu_location_box">
          Pu location
        </label>

        <input type="text" id="pu_location_box" name="query_pu_location">
      </div>

      <div>
        <label for="pu_date_box">
          Pu date
        </label>

        <input type="datetime-local" id="pu_date_box" name="query_pu_date">
      </div>

      <button>
        Create sale
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Item
        </th>

        <th>
          Buyer
        </th>

        <th>
          Seller
        </th>

        <th>
          Accepted offer
        </th>

        <th>
          Status
        </th>

        <th>
          Final price
        </th>

        <th>
          Pu location
        </th>

        <th>
          Pu date
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_sales.each do |a_sale| %>
      <tr>
        <td>
          <%= a_sale.id %>
        </td>

        <td>
          <%= a_sale.item_id %>
        </td>

        <td>
          <%= a_sale.buyer_id %>
        </td>

        <td>
          <%= a_sale.seller_id %>
        </td>

        <td>
          <%= a_sale.accepted_offer_id %>
        </td>

        <td>
          <%= a_sale.status %>
        </td>

        <td>
          <%= a_sale.final_price %>
        </td>

        <td>
          <%= a_sale.pu_location %>
        </td>

        <td>
          <%= a_sale.pu_date %>
        </td>

        <td>
          <%= time_ago_in_words(a_sale.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_sale.updated_at) %> ago
        </td>

        <td>
          <a href="/sales/<%= a_sale.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
